					} 
		 
					public function httpFault(event:FaultEvent):void { 
						var faultstring:String = event.fault.faultString; 
						Alert.show(faultstring); 
					} 
		]]> 
    </fx:Script> 

    <s:layout>
        <s:VerticalLayout/>
    </s:layout>
	
    <fx:Declarations> 
        <s:HTTPService id="userRequest" url="http://localhost:8080/" useProxy="false" method="GET"> 
            <mx:request xmlns="">
			</mx:request>         
        </s:HTTPService> 
    </fx:Declarations>

	
    <mx:DataGrid id="gridGrupoHorario" dataProvider="{xmlData.dataRow}" width="900">
        <mx:columns>
			<mx:DataGridColumn dataField="nombre"      headerText="Nombre"/>
			<mx:DataGridColumn dataField="codigo"      headerText="Código"/>
			<mx:DataGridColumn dataField="desc"        headerText="Descripción"/>
			<mx:DataGridColumn dataField="creado"      headerText="Fecha Creación"/>
			<mx:DataGridColumn dataField="actualizado" headerText="Fecha Actualización"/>
        </mx:columns>
    </mx:DataGrid>
    
    <s:Form>
        <s:FormItem label="Nombre">
            <s:Label text="{gridGrupoHorario.selectedItem.nombre}"/>
        </s:FormItem>
    </s:Form>
</s:Application>