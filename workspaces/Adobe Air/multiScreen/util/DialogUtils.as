package util{	import mx.controls.Alert; 	import mx.events.CloseEvent;	import flash.display.Sprite;					public class DialogUtils	{		public var resultYesNo:Boolean;			public function askYesNo(userMessage:String, parent:Sprite):Boolean		{			Alert.yesLabel = "Si";            Alert.noLabel  = "No";							Alert.show(userMessage, "", Alert.YES | Alert.NO, parent, evalYesNoDialog);						return resultYesNo;		}				private function evalYesNoDialog(usrResp:CloseEvent):void		{			if (usrResp.detail == Alert.OK)			{				resultYesNo = true;			}			else if (usrResp.detail == Alert.CANCEL)			{				resultYesNo = false;			}		}	}}